<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/intro_screen"
    tools:context="screen.intro.IntroActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_food_intro"
        tools:srcCompat="@drawable/img_food_intro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.22sp.Bold.White"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="0sp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="49dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Cервис для покупки еды"
        android:text="@string/intro"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/LightText.16sp.Normal.White"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="7sp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="43dp"
        android:gravity="center_horizontal"
        android:text="@string/intro_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="В этом приложении можно собрать продуктовую корзину по самым низким ценам" />
</androidx.constraintlayout.widget.ConstraintLayout>
