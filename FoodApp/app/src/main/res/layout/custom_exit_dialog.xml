<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/exit_dialog_title_text"
        android:textAppearance="@style/Text.22sp.Bold.Black"
        android:lineSpacingExtra="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_messageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/exit_dialog_message_text"
        android:textAppearance="@style/RegularText.15sp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_titleText"
        app:layout_constraintStart_toStartOf="@+id/dialog_titleText"
        app:layout_constraintTop_toBottomOf="@+id/dialog_titleText" />

    <Button
        android:id="@+id/dialog_negativeButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="8dp"
        android:text="@string/exit_dialog_negative_button_text"
        android:textAppearance="@style/RegularText.15sp.Green.Bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_messageText" />

    <Button
        android:id="@+id/dialog_positiveButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="8dp"
        android:text="@string/exit_dialog_positive_button_text"
        android:textAppearance="@style/RegularText.15sp.Green.Bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_negativeButton"
        app:layout_constraintTop_toBottomOf="@+id/dialog_messageText" />

</androidx.constraintlayout.widget.ConstraintLayout>