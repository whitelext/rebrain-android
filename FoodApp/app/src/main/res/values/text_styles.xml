<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Стили текста-->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RegularText.13sp" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RegularText.15sp.Green" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/soft_green</item>
    </style>

    <style name="RegularText.15sp.Green.Bold" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="LightText.16sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.12sp">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.12sp.Gray">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.12sp.Green">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Text.22sp">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.22sp.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightText.16sp.Normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.22sp.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LightText.16sp.Normal.White">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>