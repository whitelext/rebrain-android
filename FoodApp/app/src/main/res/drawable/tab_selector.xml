<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape
            android:shape="ring"
            android:innerRadius="0dp"
            android:thickness="10.5dp"
            android:useLevel="false">
            <stroke android:width="1dp" android:color="@color/colorShadow"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="ring"
            android:innerRadius="0dp"
            android:thickness="7.3dp"
            android:useLevel="false">
            <solid android:color="@color/colorCarouselUnchecked"/>
        </shape>
    </item>
</selector>