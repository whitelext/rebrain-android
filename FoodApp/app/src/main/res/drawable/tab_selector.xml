<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape
            android:shape="ring"
            android:innerRadius="0dp"
            android:useLevel="false">
            <stroke android:width="1dp" android:color="@color/colorShadow"/>
            <size android:width="10.5dp" android:height="10.4dp"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="ring"
            android:innerRadius="0dp"
            android:useLevel="false">
            <size android:width="7.3dp" android:height="7.3dp"/>
            <solid android:color="@color/colorCarouselUnchecked"/>
        </shape>
    </item>
</selector>